{
  "name": "grist-mcp-server",
  "version": "2.0.31",
  "description": "11 tools for managing Grist documents with AI",
  "repository": {
    "type": "git",
    "url": "https://github.com/gwhthompson/grist-mcp-server.git"
  },
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "grist-mcp-server": "dist/index.js"
  },
  "scripts": {
    "prebuild": "node scripts/sync-version.mjs",
    "build": "tsc",
    "postbuild": "node scripts/generate.mjs",
    "clean": "rm -rf dist",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "grist": "tsx scripts/docker-grist.ts",
    "test": "vitest run",
    "test:unit": "vitest run --project unit",
    "test:integration": "vitest run --project integration",
    "test:protocol": "vitest run --project protocol",
    "test:scenarios": "vitest run --project scenarios",
    "test:watch": "vitest",
    "check": "biome check --write .",
    "ci": "biome ci .",
    "lint": "biome check .",
    "pack": "npx @anthropic-ai/mcpb@2.0.1 pack",
    "pack:validate": "npx @anthropic-ai/mcpb@2.0.1 validate .",
    "bundle:vite": "vite build",
    "bundle": "npm run build && npm run bundle:vite && npm run pack",
    "prepare": "husky || true"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "grist",
    "database",
    "spreadsheet",
    "ai",
    "llm"
  ],
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.24.3",
    "axios": "^1.13.2",
    "zod": "^4.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@types/node": "^25.0.3",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.15",
    "dotenv-cli": "^11.0.0",
    "husky": "^9.1.7",
    "tsx": "^4.21.0",
    "typescript": "^5.7.2",
    "vite": "^7.3.0",
    "vitest": "^4.0.15"
  }
}
