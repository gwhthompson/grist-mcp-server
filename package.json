{
  "name": "grist-mcp-server",
  "version": "1.2.2",
  "description": "Production-grade MCP server for Grist API integration with retry logic, rate limiting, caching, and comprehensive error handling",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration tests/validation",
    "test:contract": "vitest run tests/contract",
    "test:all": "vitest run",
    "test:verbose": "vitest run --reporter=verbose",
    "test:quiet": "vitest run --reporter=dot",
    "test:watch": "vitest",
    "test:watch:unit": "vitest tests/unit",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:no-cleanup": "SKIP_CLEANUP=true vitest run",
    "test:inspect": "SKIP_CLEANUP=true vitest run",
    "format": "biome format --write .",
    "lint": "biome lint --write .",
    "check": "biome check --write .",
    "ci": "biome ci ."
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "grist",
    "database",
    "spreadsheet",
    "ai",
    "llm"
  ],
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.21.1",
    "axios": "^1.7.9",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.3",
    "@types/node": "^22.10.0",
    "@vitest/ui": "^4.0.7",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^4.0.7"
  }
}
