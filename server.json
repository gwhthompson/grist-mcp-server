{
  "$schema": "https://static.modelcontextprotocol.io/schemas/2025-12-11/server.schema.json",
  "name": "io.github.gwhthompson/grist-mcp-server",
  "description": "11 tools for managing Grist documents with AI",
  "version": "2.0.35",
  "repository": {
    "url": "https://github.com/gwhthompson/grist-mcp-server",
    "source": "github"
  },
  "packages": [
    {
      "registryType": "npm",
      "identifier": "grist-mcp-server",
      "version": "2.0.35",
      "transport": {
        "type": "stdio"
      },
      "environmentVariables": [
        {
          "name": "GRIST_API_KEY",
          "description": "Your Grist API key",
          "format": "string",
          "isRequired": true,
          "isSecret": true
        },
        {
          "name": "GRIST_BASE_URL",
          "description": "Base URL for Grist instance (default: https://docs.getgrist.com)",
          "format": "string",
          "isRequired": false,
          "isSecret": false,
          "default": "https://docs.getgrist.com"
        }
      ]
    }
  ]
}
