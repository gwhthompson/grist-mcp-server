{
  "name": "grist-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for Grist API integration - enables AI assistants to interact with Grist documents, tables, and records",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "clean": "rm -rf dist",
    "format": "biome format --write .",
    "lint": "biome lint --write .",
    "check": "biome check --write .",
    "ci": "biome ci ."
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "grist",
    "database",
    "spreadsheet",
    "ai",
    "llm"
  ],
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.6.1",
    "axios": "^1.7.9",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.3",
    "@types/node": "^22.10.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
