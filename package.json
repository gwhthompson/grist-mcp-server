{
  "name": "grist-mcp-server",
  "version": "1.0.5",
  "description": "22 tools for managing Grist documents with AI",
  "repository": {
    "type": "git",
    "url": "https://github.com/gwhthompson/grist-mcp-server.git"
  },
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "grist-mcp-server": "dist/index.js"
  },
  "scripts": {
    "prebuild": "node scripts/sync-version.mjs",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "inspect": "npm run build && npx @modelcontextprotocol/inspector node dist/index.js",
    "inspect:dev": "npx @modelcontextprotocol/inspector tsx src/index.ts",
    "build": "tsc",
    "postbuild": "node scripts/generate.mjs",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/scenarios tests/error-handling",
    "test:contract": "vitest run tests/contracts",
    "test:all": "vitest run",
    "test:verbose": "vitest run --reporter=verbose",
    "test:quiet": "vitest run --reporter=dot",
    "test:watch": "vitest",
    "test:watch:unit": "vitest tests/unit",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:no-cleanup": "SKIP_CLEANUP=true vitest run",
    "test:inspect": "SKIP_CLEANUP=true vitest run",
    "format": "biome format --write .",
    "lint": "biome lint --write .",
    "check": "biome check --write .",
    "ci": "biome ci .",
    "pack": "npx @anthropic-ai/mcpb@2.0.1 pack",
    "pack:validate": "npx @anthropic-ai/mcpb@2.0.1 validate .",
    "pack:info": "npx @anthropic-ai/mcpb@2.0.1 info grist-mcp-server.mcpb",
    "bundle": "npm run build && npm ci --omit=dev && npm run pack",
    "prebundle": "echo '⚠️  WARNING: This will reinstall dependencies with --omit=dev'",
    "prepare": "husky || true"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "grist",
    "database",
    "spreadsheet",
    "ai",
    "llm"
  ],
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.24.3",
    "axios": "^1.13.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@types/node": "^24.10.1",
    "@vitest/ui": "^4.0.15",
    "husky": "^9.1.7",
    "tsx": "^4.21.0",
    "typescript": "^5.7.2",
    "vitest": "^4.0.15"
  }
}
